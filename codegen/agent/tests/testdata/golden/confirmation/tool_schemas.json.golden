{
  "tools": [
    {
      "confirmation": {
        "denied_result_template": "{\"summary\":\"Cancelled\",\"key\":\"{{ .Key }}\"}",
        "prompt_template": "Approve write: set {{ .Key }} to {{ .Value }}",
        "title": "Confirm change"
      },
      "description": "Write a stateful change",
      "id": "atlas.commands.dangerous_write",
      "payload": {
        "name": "DangerousWritePayload",
        "schema": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "properties": {
            "key": {
              "description": "Key to update.",
              "example": "Et iusto ex.",
              "type": "string"
            },
            "value": {
              "description": "New value.",
              "example": "Ipsam quia repudiandae quibusdam.",
              "type": "string"
            }
          },
          "required": [
            "key",
            "value"
          ],
          "type": "object"
        }
      },
      "result": {
        "name": "DangerousWriteResult",
        "schema": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "properties": {
            "key": {
              "description": "Key that was updated.",
              "example": "Et expedita dignissimos.",
              "type": "string"
            },
            "summary": {
              "description": "Summary of the update.",
              "example": "Animi magnam repellat et.",
              "type": "string"
            }
          },
          "required": [
            "summary",
            "key"
          ],
          "type": "object"
        }
      },
      "service": "alpha",
      "title": "Dangerous Write",
      "toolset": "alpha.atlas.commands"
    }
  ]
}
