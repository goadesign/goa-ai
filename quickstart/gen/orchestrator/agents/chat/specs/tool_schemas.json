{
  "tools": [
    {
      "id": "helpers.answer",
      "service": "orchestrator",
      "toolset": "orchestrator.helpers",
      "title": "Answer",
      "description": "Answer a simple question",
      "payload": {
        "name": "AnswerPayload",
        "schema": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "properties": {
            "question": {
              "type": "string",
              "description": "User question to answer",
              "example": "Delectus eveniet ad accusantium magnam saepe nulla."
            }
          },
          "required": [
            "question"
          ]
        }
      },
      "result": {
        "name": "AnswerResult",
        "schema": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "Answer text",
              "example": "Ipsa et reprehenderit distinctio id nobis."
            }
          },
          "required": [
            "text"
          ]
        }
      }
    }
  ]
}
